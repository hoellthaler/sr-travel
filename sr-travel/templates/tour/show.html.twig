{% extends 'base.html.twig' %}

{% block title %}Tour{% endblock %}

{% block body %}
    <h1>Tour</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tour.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tour.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ tour.startDate ? tour.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ tour.endDate ? tour.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tour_index') }}">back to list</a>

    <a href="{{ path('app_tour_edit', {'id': tour.id}) }}">edit</a>

    {{ include('tour/_delete_form.html.twig') }}
{% endblock %}
